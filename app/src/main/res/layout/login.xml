<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/backgroud_fundo"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagebessa"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Bem Vindo" />

    <EditText
        android:id="@+id/campo_usuario"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_margin="16dp"
        android:background="@drawable/backgroud_input"
        android:paddingHorizontal="15dp"
        android:hint="@string/texto_usuario"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/campo_senha"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_margin="16dp"
        android:paddingHorizontal="15dp"
        android:background="@drawable/backgroud_input"
        android:inputType="textPassword"
        android:hint="@string/texto_senha" />

    <CheckBox
        android:id="@+id/checkbox_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:text="Lembrar Senha" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao_login"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="90dp"
        android:background="@drawable/backgroud_button"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao_novoUsuario"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="90dp"
        android:background="@drawable/backgroud_button"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Novo UsuÃ¡rio" />

</LinearLayout>